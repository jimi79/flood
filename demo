#!/bin/bash

x=$1
y=$2 
cols=$3
mp=$4


[ -z $x ] && x=19 # size x
[ -z $y ] && y=19 # size y
[ -z $cols ] && cols=8 # max color number
[ -z $mp ] && mp=50 # max path size

bx=$(($x/2))
by=$(($y/2))


bin/flood_create $x $y $cols > /tmp/board
cat /tmp/board | bin/flood_solve bx=$bx by=$by mp=$mp > /tmp/answer
cat /tmp/answer /tmp/board | bin/flood_print bx=$bx by=$by ds=0 dst=0 dn=0
#if [ $dst -eq 1 ]; then 
#	answer=$(cat /tmp/answer)
#	printf "\nAnswer is %s. Length is %d\n" $answer ${#answer}
#fi
